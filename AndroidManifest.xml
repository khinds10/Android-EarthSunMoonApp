<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevinhinds.riseandset"
    android:versionCode="7"
    android:versionName="3.5" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Appjolt Permissions -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widget.MoonWidget"
            android:label="Live Moon" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/moon_widget_provider" />
        </receiver>
        <receiver
            android:name=".widget.SunWidget"
            android:label="Live Sun" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sun_widget_provider" />
        </receiver>
        <receiver
            android:name=".widget.EarthWidget"
            android:label="Live Earth" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/earth_widget_provider" />
        </receiver>
        <receiver
            android:name=".widget.EarthWeatherWidget"
            android:label="Live Earth Weather" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/earth_weather_widget_provider" />
        </receiver>

        <!-- Service to perform web API queries -->
        <service android:name=".widget.UpdateService" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Appjolt -->
        <!-- Note: For optimal OS version compatibility, please do not change any attributes -->


        <!-- Appjolt Activity -->
        <activity
            android:name="com.appjolt.winback.AppjoltActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="false"
            android:taskAffinity="com.appjolt.winback.twentyeight"
            android:theme="@android:style/Theme.Panel" />

        <!-- Appjolt Service -->
        <service
            android:name="com.appjolt.winback.WinbackService"
            android:enabled="true"
            android:exported="true"
            android:process=":appjolt" />

        <!-- Appjolt BOOT receiver -->
        <receiver
            android:name="com.appjolt.winback.WinbackBootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>